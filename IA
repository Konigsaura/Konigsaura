import { useState } from 'react'; import { Card, CardContent } from '@/components/ui/card'; import { Button } from '@/components/ui/button';

const products = [ { id: 1, name: 'Producto 1', price: '$10', link: 'https://example.com/producto1' }, { id: 2, name: 'Producto 2', price: '$20', link: 'https://example.com/producto2' }, { id: 3, name: 'Producto 3', price: '$30', link: 'https://example.com/producto3' } ];

export default function App() { return ( <div className="min-h-screen bg-gray-100 flex flex-col items-center justify-center p-4"> <h1 className="text-2xl font-bold mb-4">Productos en Venta</h1> <div className="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4"> {products.map(product => ( <Card key={product.id} className="p-4 bg-white shadow-lg rounded-2xl"> <CardContent> <h2 className="text-xl font-semibold">{product.name}</h2> <p className="text-gray-500 mb-2">Precio: {product.price}</p> <Button variant="default" asChild> <a href={product.link} target="_blank" rel="noopener noreferrer">Comprar Ahora</a> </Button> </CardContent> </Card> ))} </div> </div> ); }



